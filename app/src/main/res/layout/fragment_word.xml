<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AddWordFragment">


    <ImageView
        android:id="@+id/imageView2Word"
        android:onClick="findPicture"
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCategoryWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:text="Category"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2Word"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textWordWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Word"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:background="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCategoryWord"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textMeaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:text="Meaning"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWordWord"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textSentenceWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example Sentence"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:background="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMeaning" />

    <TextView
        android:id="@+id/textSynonymsWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Synonyms"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSentenceWord" />

    <TextView
        android:id="@+id/textAntonymsWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Antonyms"
        android:textColor="#FFFFFF"
        android:background="@color/teal_200"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSynonymsWord"
        />

    <Button
        android:id="@+id/buttonSaveWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addingMyList"
        android:ems="10"
        android:text="Add to List"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textAntonymsWord" />


</androidx.constraintlayout.widget.ConstraintLayout>